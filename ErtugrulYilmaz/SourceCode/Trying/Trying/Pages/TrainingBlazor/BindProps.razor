<select @bind="defaultSelectValue">
    @foreach (var drop in dropdownProps)
    {
        <option value="@drop.Name">@drop.Name</option>
    }
</select>
<br />
<span>Selected Course is name : @defaultSelectValue </span>
<br />

<EditDeleteButtonComponent IsAdmin="true" ></EditDeleteButtonComponent>
@code {
    string defaultSelectValue = "Microservice";
    CourseTraning course = new() { Id = 1, CourseName = "Blazor E-Commerce", IsActive = false, Price = 20 };
    List<DropdownProps> dropdownProps = new()
    {
        new() {Id =1,Name="E-Commerce",Value="30"  },
        new() {Id =2,Name="Microservice",Value="40"  },
        new() {Id =3,Name="Social Media",Value="50"  },
        new() {Id =4,Name="Dependency Injection",Value="60"  },
    };
}